<comment>
problem   = spherical blast wave (AthenaK)
reference = Gardiner & Stone, JCP 205, 509 (2005)

<job>
basename  = Blast

<mesh>
nghost    = 4
nx1       = 64
x1min     = -0.5
x1max     = 0.5
ix1_bc    = periodic
ox1_bc    = periodic

nx2       = 64
x2min     = -0.5
x2max     = 0.5
ix2_bc    = periodic
ox2_bc    = periodic

nx3       = 1
