ndiag      = 1

<mhd>
eos         = ideal
reconstruct = ppm4
rsolver     = hlld
gamma       = 1.6666667

<problem>
pi_amb       = 0.1
b_amb        = 1.0
prat         = 100.
inner_radius = 0.1
outer_radius = 0.1

<output1>
file_type  = hst
