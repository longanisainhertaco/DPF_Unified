x3max     = 0.5
ix3_bc    = periodic
ox3_bc    = periodic

<meshblock>
nx1       = 64
nx2       = 64
nx3       = 1

<time>
evolution  = dynamic
integrator = rk2
cfl_number = 0.3
nlim       = -1
